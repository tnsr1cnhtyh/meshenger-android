<resources>
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="ButtonColorFireRed" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#FFEC3E3E</item>
    </style>

    <style name="ButtonColorGrassGreen" parent="ButtonStyle">
        <item name="android:textColor">#E2FFC1</item>
        <item name="android:backgroundTint">#3C983F</item>
    </style>

    <style name="ButtonColorSkyBlue" parent="ButtonStyle">
       <item name="android:textColor">@color/white</item>
       <item name="android:backgroundTint">#1C6FB7</item>
    </style>

    <style name="ButtonColorNightGrey" parent="ButtonStyle">
       <item name="android:textColor">@color/light_grey</item>
       <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="CurvedImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/headline_text_size</item>
    </style>

    <style name="MySpinner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">#7C7B7B</item>
    </style>
</resources>
